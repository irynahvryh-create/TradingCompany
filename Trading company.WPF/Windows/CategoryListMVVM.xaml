<Window x:Class="TradingCompany.WPF.Windows.CategoryListMVVM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradingCompany.WPF.Windows"
        mc:Ignorable="d"
        Title="CategoryListMVVM" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <!-- Кнопки доступні лише адміну -->
            <Button Content="Add Category" Click="AddButton_Click"
                    IsEnabled="{Binding CanUseByAdminCommand.CanExecute, Mode=OneWay}" Margin="5"/>
            <Button Content="Edit Category" Click="EditButton_Click"
                    IsEnabled="{Binding CanUseByAdminCommand.CanExecute, Mode=OneWay}" Margin="5"/>
            <Button Content="Delete Category" Click="DeleteButton_Click"
                    IsEnabled="{Binding CanUseByAdminCommand.CanExecute, Mode=OneWay}" Margin="5"/>

            <!-- DataGrid для категорій -->
            <DataGrid ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      HeadersVisibility="Column"
                      Margin="0,10,0,0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Назва Категорії" 
                                        Binding="{Binding Name}" Width="200" />
                    <DataGridCheckBoxColumn Header="Активний" 
                                            Binding="{Binding Status}" Width="Auto" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</Window>
