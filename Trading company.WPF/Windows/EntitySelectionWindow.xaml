<Window x:Class="TradingCompany.WPF.Windows.EntitySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradingCompany.WPF.Windows"
        mc:Ignorable="d"
        Title="EntitySelectionWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Text="Виберіть сутність для роботи:" FontSize="16" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <Button Content="Категорії" Width="150" Margin="0,0,0,10" Click="CategoryButton_Click"/>
            <Button Content="Виробники" Width="150" Click="ManufacturerButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
