<Window x:Class="TradingCompany.WPF.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login"
        Height="380"
        Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#f3f4f6"
        ResizeMode="NoResize">

    <Window.Resources>

        <!-- Стиль для текстбоксів -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0 4 0 12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#9ca3af"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0 4 0 12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#9ca3af"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Стиль кнопок -->
        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Background" Value="#3b82f6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563eb"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1e40af"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>



    <Grid>
        <Border Background="White"
                CornerRadius="10"
                Padding="25"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Width="260">

                <TextBlock Text="Увійти"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>

                <!-- USERNAME -->
                <TextBlock Text="Username" FontSize="14" Margin="0 0 0 3"/>
                <TextBox>
                    <TextBox.Text>
                        <Binding Path="Username"
                                 UpdateSourceTrigger="PropertyChanged"
                                 ValidatesOnDataErrors="True"
                                 ValidatesOnExceptions="True">
                            <Binding.ValidationRules>
                                <ExceptionValidationRule />
                                <DataErrorValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>

                <!-- PASSWORD -->
                <TextBlock Text="Password" FontSize="14" Margin="0 0 0 3"/>
                <PasswordBox PasswordChanged="PasswordBox_PasswordChanged"/>

                <!-- ERROR MESSAGE -->
                <TextBlock Text="{Binding Error}"
                           Foreground="Red"
                           FontSize="12"
                           Margin="0 4 0 4"
                           TextWrapping="Wrap"/>

                <!-- BUTTONS -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                    <Button Content="Cancel"
                            Background="#6b7280"
                            Command="{Binding CloseCommand}"/>

                    <Button Content="Login"
                            IsDefault="True"
                            Command="{Binding LoginCommand}"/>
                </StackPanel>

            </StackPanel>

        </Border>
    </Grid>
</Window>
