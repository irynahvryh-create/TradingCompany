<Window x:Class="TradingCompany.WPF.Windows.ProductLogListMVVM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Логи продуктів" Height="450" Width="750">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фільтр -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
            <Label Content="Фільтр:" VerticalAlignment="Center"/>
            <TextBox Width="200" Margin="5,0,0,0" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding LogsView}" AutoGenerateColumns="False"
                  SelectedItem="{Binding SelectedLog}" CanUserAddRows="False" Margin="0,0,0,5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding LogID}" Width="50"/>
                <DataGridTextColumn Header="Product ID" Binding="{Binding ProductID}" Width="80"/>
                <DataGridTextColumn Header="Old Price" Binding="{Binding OldPrice}" Width="80"/>
                <DataGridTextColumn Header="New Price" Binding="{Binding NewPrice}" Width="80"/>
                <DataGridCheckBoxColumn Header="Активний" Binding="{Binding Status}" Width="60"/>
                <DataGridTextColumn Header="Коментар" Binding="{Binding Comment}" Width="*"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding Date}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
            <Button Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"
Click="BackButton_Click"/>
            <Button Content="Додати" Width="75" Margin="5" Click="AddButton_Click"/>
            <Button Content="Редагувати" Width="75" Margin="5" Click="EditButton_Click"/>
            <Button Content="Видалити" Width="75" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
