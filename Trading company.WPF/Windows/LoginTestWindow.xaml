<Window x:Class="TradingCompany.WPF.Windows.LoginTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тест авторизації" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Поточний користувач:" FontWeight="Bold" />
        <TextBlock Text="{Binding CurrentUserName}" Margin="0,5,0,0"/>
        <TextBlock Text="Роль користувача:" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBlock Text="{Binding Role}" Margin="0,5,0,0"/>
        <Button Content="Закрити" Margin="0,20,0,0" Width="100" HorizontalAlignment="Center" Click="Close_Click"/>
    </StackPanel>
</Window>
